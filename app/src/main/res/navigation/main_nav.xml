<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.app.invite.view.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/gotoInvite"
            app:destination="@id/inviteFragment" />
    </fragment>
    <fragment
        android:id="@+id/inviteFragment"
        android:name="com.app.invite.view.invite.InviteTeamFragment"
        android:label="InviteFragment" >
        <action
            android:id="@+id/gotoHome"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/gotoQR"
            app:destination="@id/QRFragment" />
    </fragment>
    <fragment
        android:id="@+id/QRFragment"
        android:name="com.app.invite.view.qr.ShowQRFragment"
        android:label="fragment_q_r"
        tools:layout="@layout/fragment_q_r" >
        <action
            android:id="@+id/gotoInvite"
            app:destination="@id/inviteFragment" />
    </fragment>
</navigation>